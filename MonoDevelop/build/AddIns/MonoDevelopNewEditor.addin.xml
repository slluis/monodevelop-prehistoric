		                          icon = "Icons.16x16.GotoPrevbookmark"
		                          class = "MonoDevelop.EditorBindings.Commands.PrevBookmark"/>
		                <MenuItem id = "NextBookmark"
		                          _label = "_Next Bookmark" 
		                          description = "${res:XML.MainMenu.SearchMenu.NextBookmark.Description}" 
