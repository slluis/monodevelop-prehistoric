<AddIn name        = "Regular expressions toolkit addin"
       author      = "Markus Palme"
       copyright   = "GPL"
       url         = "unknown"
       description = "Testing toollit for regular expressions"
       version     = "1.0.0">

	<Runtime>
		<Import assembly="RegExpTk.dll" />
	</Runtime>

	<Extension path = "/SharpDevelop/Workbench/MainMenu/Tools">
		<MenuItem id = "RegExpTk" 
				  insertafter = "Separator1" insertbefore = "Options"
				  label       = "Regular expressions toolkit" 
				  description = "Generates a messagebox call" 
				  class       = "Plugins.RegExpTk.RegExpTkCommand"
		/>
	</Extension>
</AddIn>
